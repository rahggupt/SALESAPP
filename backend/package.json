{
  "name": "medicine-shop-backend",
  "version": "1.0.0",
  "description": "Backend for Medicine Shop Application",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "rm -rf dist && tsc --project tsconfig.json",
    "prod": "NODE_ENV=production node dist/server.js",
    "seed": "ts-node src/seed.ts",
    "seed:medicines": "ts-node src/scripts/seedMedicines.ts",
    "delete:medicines": "ts-node src/scripts/deleteSampleMedicines.ts"
  },
  "dependencies": {
    "@types/react-beautiful-dnd": "^13.1.8",
    "aws-sdk": "^2.1692.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "multer": "^1.4.5-lts.1",
    "react-beautiful-dnd": "^13.1.1",
    "react-hot-toast": "^2.5.2",
    "typescript": "^5.0.4",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.15.11",
    "@types/uuid": "^9.0.1",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0"
  }
}
